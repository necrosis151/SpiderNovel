<?xml version="1.0" encoding="UTF-8"?>

<sites>
    <site>
        <title>起点中文网</title>
        <url>qidian.com</url>
        <charset>UTF-8</charset>
        <spider_factory>Qidian</spider_factory>
        <!-- chapter信息-->
        <chapters-selector-part>ul[class=cf]</chapters-selector-part>
        <chapters-selector-chapterlist>li a</chapters-selector-chapterlist>
        <!-- novelcontent信息-->
        <novel-title>h3[class=j_chapterName]</novel-title>
        <novel-content>div[class=read-content j_readContent] p</novel-content>
        <novel-readpage>div[class=chapter-control dib-wrap] a</novel-readpage>
        <!-- novelindex-->
        <novel_info>div[class=book-mid-info]</novel_info>
    </site>
    <site>
        <title>逐浪小说</title>
        <url>zhulang.com</url>
        <charset>UTF-8</charset>
        <spider_factory>Zhulang</spider_factory>
        <!-- chapter信息-->
        <chapters-selector-part>div[class=chapter-list]</chapters-selector-part>
        <chapters-selector-chapterlist>ul li a</chapters-selector-chapterlist>
        <!-- novelcontent信息-->
        <novel-title>#read-content h2</novel-title>
        <novel-content>#read-content p</novel-content>
        <novel-readpage>div[class=read-page] a</novel-readpage>
        !-- novelindex-->
        <novel_info>table[class=booklist] tbody tr </novel_info>
    </site>
</sites>